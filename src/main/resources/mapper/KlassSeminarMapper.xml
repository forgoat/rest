<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rest.dao.KlassSeminarDao">
    <select id="findBySeminar" parameterType="long" resultType="com.rest.entity.KlassSeminar">
        SELECT * FROM standard_seminar_system.klass_seminar WHERE seminar_id=#{seminarId}
    </select>
    <select id="queryByKlassId" resultType="com.rest.entity.KlassSeminar">
        SELECT *
        FROM standard_seminar_system.klass_seminar
        WHERE klass_id=#{klassId}
    </select>
    <insert id="save" parameterType="com.rest.entity.KlassSeminar" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO standard_seminar_system.klass_seminar(klass_id,seminar_id,status) VALUE(#{klassId},#{seminarId},0)
    </insert>
    <delete id="delete" parameterType="long">
        DELETE FROM standard_seminar_system.klass_seminar WHERE id=#{id}
    </delete>
    <update id="changeStatus">
        UPDATE standard_seminar_system.klass_seminar SET status=#{param2} WHERE id=#{klassSeminarId}
    </update>
    <update id="changeddl">
        UPDATE standard_seminar_system.klass_seminar SET report_ddl=#{param3} WHERE seminar_id=#{param1} AND klass_id=#{param2}
    </update>
    <select id="findByKlassIdAndSeminarId" resultType="com.rest.entity.KlassSeminar">
        SELECT * FROM standard_seminar_system.klass_seminar WHERE klass_id=#{param1} AND seminar_id=#{param2}
    </select>
    <delete id="deleteBySeminarId" parameterType="long">
        DELETE FROM standard_seminar_system.klass_seminar WHERE seminar_id=#{seminarId}
    </delete>
    <select id="queryKlassSeminarIdByKlassIdAndSeminarId" resultType="long">
        SELECT id
        FROM standard_seminar_system.klass_seminar
        WHERE
        klass_id=#{klassId}
        AND
        seminar_id=#{seminarId}
    </select>
    <select id="findKlassSeminarById" resultType="com.rest.entity.KlassSeminar" parameterType="long">
        SELECT * FROM standard_seminar_system.klass_seminar WHERE id=#{klassSeminarId}
    </select>
    <update id="startSeminar" parameterType="long">
        UPDATE standard_seminar_system.klass_seminar SET status=1 WHERE id=#{klassSeminarId}
    </update>
</mapper>