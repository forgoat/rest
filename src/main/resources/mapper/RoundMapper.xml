<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rest.dao.RoundDao">
    <insert id="saveRound" parameterType="com.rest.entity.Round" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO standard_seminar_system.round(course_id,round_serial,presentation_score_method,report_score_method,question_score_method) VALUE(#{courseId},#{roundSerial},#{presentationScoreMethod},#{reportScoreMethod},#{questionScoreMethod})
    </insert>
    <select id="find" parameterType="long" resultType="com.rest.entity.Round">
        SELECT * FROM standard_seminar_system.round WHERE id=#{id}
    </select>
    <update id="updateRoundSelective">
        UPDATE standard_seminar_system.round
        <set>
            <if test="param2!=null ">
                presentation_score_method=#{param2},
            </if>
            <if test="param3!=null ">
                report_score_method=#{param3},
            </if>
            <if test="param4!=null ">
                question_score_method=#{param4}
            </if>
        </set>
        WHERE id=#{param1}
    </update>
</mapper>