<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rest.dao.ShareSeminarApplicationDao">
    <insert id="save" parameterType="com.rest.entity.ShareSeminarApplication" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO standard_seminar_system.share_seminar_application(main_course_id,sub_course_id,sub_course_teacher_id) VALUE (#{mainCourseId},#{subCourseId},#{subCourseTeacherId})
    </insert>
    <select id="findByMainCourseIdOrSubCourseId" parameterType="long" resultType="com.rest.entity.ShareSeminarApplication">
        SELECT * FROM standard_seminar_system.share_seminar_application WHERE main_course_id=#{courseId} OR sub_course_id=#{courseId}
    </select>
    <update id="acceptSeminarShare" parameterType="long">
        UPDATE standard_seminar_system.share_seminar_application SET status=1 WHERE id=#{shareSeminarId}
    </update>
</mapper>