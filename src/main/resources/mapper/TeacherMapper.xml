<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rest.dao.TeacherDao">
    <select id="teacherlist" resultType="com.rest.entity.Teacher">
        SELECT * FROM standard_seminar_system.teacher;
    </select>
    <insert id="add" parameterType="com.rest.entity.Teacher" useGeneratedKeys="true">
        INSERT INTO standard_seminar_system.teacher(account,password,is_active,teacher_name,email) VALUE
        (#{account},#{password},#{is_active},#{teacher_name},#{email})
    </insert>
    <select id="findByAccount" parameterType="String" resultType="com.rest.entity.Teacher">
        SELECT * FROM standard_seminar_system.teacher WHERE account=#{account}
    </select>
    <select id="findById" parameterType="long" resultType="com.rest.entity.Teacher">
        SELECT * FROM standard_seminar_system.teacher WHERE id=#{id}
    </select>
    <update id="updatePassword">
        UPDATE standard_seminar_system.teacher SET password=#{param2} WHERE id=#{param1}
    </update>
    <update id="updateEmail">
        UPDATE standard_seminar_system.teacher SET email=#{param2} WHERE id=#{param1}
    </update>
    <update id="actival">
        UPDATE standard_seminar_system.teacher SET is_active=1 WHERE id=#{param2} AND password=#{param1}
    </update>
    <delete id="delete" parameterType="long">
        DELETE FROM standard_seminar_system.teacher WHERE id=#{id}
    </delete>
    <select id="search" resultType="com.rest.entity.Teacher">
        SELECT * FROM standard_seminar_system.teacher
        WHERE
        <if test="param1!=null and param2==null ">
            account=#{param1}
        </if>
        <if test="param2!=null and param1==null ">
            teacher_name=#{param2}
        </if>
        <if test="param1!=null and param2!=null ">
            account=#{param1} AND teacher_name=#{param2}
        </if>
    </select>
    <update id="updateInfo">
        UPDATE standard_seminar_system.teacher
        <set>
        <if test="param2!=null">
            account=#{param2},
        </if>
        <if test="param3!=null ">
            email=#{param3},
        </if>
        <if test="param4!=null ">
            teacher_name=#{param4}
        </if>
        </set>
        WHERE id=#{param1}
    </update>
</mapper>